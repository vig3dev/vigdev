<!DOCTYPE html>
<html>
  <head>
    <title>Vigdev</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="p-3 mb-2 bg-dark text-white">
    <nav class="navbar navbar-dark bg-dark">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          <h1>vigilant<b>development</b></h1>
          <br />
          <br />
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-sm btn-outline-light" data-toggle="modal" data-target="#techSpecs">
            TechSpecs
          </button>

          <!-- Modal -->
          <div class="modal fade" id="techSpecs" tabindex="-1" role="dialog" aria-labelledby="techSpecsLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="techSpecsLabel">TechSpecs</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  ...
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    </nav>
  
  <%= yield %>
  </body>
</html>